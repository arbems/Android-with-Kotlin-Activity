<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arbems.saveandresetuistatus">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SavedStateActivity"
            android:label="SavedState" />
        <activity
            android:name=".PersistentStorageActivity"
            android:label="Almacenamiento persistente" />
        <activity
            android:name=".InstanceStateActivity"
            android:label="Estado de instancia" />
        <activity
            android:name=".ViewModelActivity"
            android:label="ViewModel" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>